.route-detail {
  max-width: 1200px;
  margin: 0 auto;
}

.route-header {
  background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), 
              linear-gradient(45deg, #1e5799 0%, #2989d8 50%, #207cca 51%, #7db9e8 100%);
  color: white;
  padding: 3rem 2rem;
  margin-bottom: 2rem;
  border-radius: 8px;
}

.header-content {
  max-width: 800px;
  margin: 0 auto;
}

.back-button {
  display: inline-block;
  color: white;
  text-decoration: none;
  margin-bottom: 1rem;
  font-weight: bold;
}

.route-meta {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-top: 0.5rem;
  flex-wrap: wrap;
}

.location {
  font-size: 1.2rem;
}

.badge {
  background: rgba(255, 255, 255, 0.2);
  padding: 0.3rem 0.8rem;
  border-radius: 20px;
  font-size: 0.9rem;
  font-weight: bold;
}

.route-body {
  display: grid;
  grid-template-columns: 2fr 1fr;
  gap: 2rem;
  padding: 0 1rem;
}

.route-info-card {
  background: white;
  padding: 2rem;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 1.5rem;
  margin: 1.5rem 0;
}

.info-item h3 {
  font-size: 1rem;
  margin-bottom: 0.3rem;
  color: #666;
}

.route-info-card > h3 {
  margin: 1.5rem 0 0.5rem;
}

.route-conditions {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.weather-card, .traffic-card {
  background: white;
  padding: 1.5rem;
  border-radius: 8px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.current-weather {
  font-size: 1.2rem;
  margin: 1rem 0;
}

.forecast {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1rem;
}

.forecast-day {
  text-align: center;
  padding: 1rem;
  background: #f5f5f5;
  border-radius: 8px;
}

.forecast-day h4 {
  margin-bottom: 0.5rem;
}

.forecast-day p {
  margin: 0.2rem 0;
  font-size: 0.9rem;
}

@media (max-width: 768px) {
  .route-body {
    grid-template-columns: 1fr;
  }
  
  .forecast {
    grid-template-columns: 1fr;
  }
} 